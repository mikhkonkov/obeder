.page-header
  %h1= t('.title')
= simple_form_for @user, url: password_path(id: params[:id]), method: 'PUT', html: { class: 'form-horizontal' } do |f|
  .row
    .col-md-7
      = f.input :password
      = f.input :password_confirmation

      .form-group
        .col-sm-offset-3.col-sm-9
          = f.button :submit, t('save'), class: 'btn btn-primary'
